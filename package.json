{
  "name": "privacy-nft-marketplace",
  "version": "1.0.0",
  "description": "Privacy NFT Marketplace - Confidential collectibles trading using Zama FHE protocol",
  "main": "index.html",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "node": "npx hardhat node",
    "deploy": "npx hardhat ignition deploy ./ignition/modules/PrivacyNFTMarketplace.js",
    "deploy:local": "npx hardhat ignition deploy ./ignition/modules/PrivacyNFTMarketplace.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy-marketplace.js --network sepolia",
    "deploy:all": "npx hardhat run scripts/deploy-marketplace.js --network sepolia",
    "verify": "npx hardhat run scripts/verify-contracts.js --network sepolia",
    "frontend": "npx http-server . -p 3067 -c-1",
    "dev": "npx http-server . -p 3067 -c-1",
    "start": "npx http-server . -p 3067 -c-1",
    "lint": "npx eslint .",
    "clean": "npx hardhat clean"
  },
  "keywords": [
    "nft",
    "privacy",
    "fhe",
    "zama",
    "blockchain",
    "marketplace",
    "web3",
    "ethereum",
    "hardhat",
    "zero-knowledge",
    "confidential",
    "collectibles"
  ],
  "author": "Privacy NFT Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fhevm/hardhat-plugin": "0.0.1-3",
    "@fhevm/solidity": "^0.7.0",
    "@zama-fhe/relayer-sdk": "^0.1.0",
    "axios": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
